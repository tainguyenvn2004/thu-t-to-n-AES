# Chuáº©n hÃ³a khÃ³a AES vá» Ä‘á»™ dÃ i phÃ¹ há»£p: 16, 24 hoáº·c 32 bytes
def get_aes_key(key: str) -> bytes:
    return sha256(key.encode()).digest()[:32]  # Chuáº©n hÃ³a khÃ³a 32 byte báº±ng SHA-256

# MÃ£ hÃ³a dá»¯ liá»‡u báº±ng AES
def encrypt_file(data: bytes, key: str) -> bytes:
    key_bytes = get_aes_key(key)
    cipher = AES.new(key_bytes, AES.MODE_CBC, iv=b"1234567890abcdef")
    encrypted = cipher.encrypt(pad(data, AES.block_size))
    return encrypted

# Giáº£i mÃ£ dá»¯ liá»‡u báº±ng AES
def decrypt_file(data: bytes, key: str) -> bytes:
    key_bytes = get_aes_key(key)
    cipher = AES.new(key_bytes, AES.MODE_CBC, iv=b"1234567890abcdef")
    decrypted = unpad(cipher.decrypt(data), AES.block_size)
    return decrypted

